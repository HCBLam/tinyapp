<!-- PAGE HEADER -->

<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <!-- HEADER FOR USER LOGGED IN -->
    <% if (email) { %>
      <form class="form-inline" action="/logout" method="POST">
        <div class='nav-item nav-link'>Logged In As: <%= email %></div>
        <button type="submit" class="btn btn-primary" style='color: white; border-color: white; background-color: rgb(0, 150, 25)'>Logout</button>
      </form>

      <!-- HEADER FOR USER NOT LOGGED IN -->
      <% } else { %>

        <form action="/register" method="GET">
          <button type="submit" class="btn btn-primary" style='color: white; border-color: white; background-color: rgb(0, 150, 25)'>Register</button>
        </form>

        <form action="/login" method="GET">
          <button type="submit" class="btn btn-primary" style='color: white; border-color: white; background-color: rgb(0, 150, 25)'>Login</button>
        </form>

    <% } %>



  </nav>
</header>